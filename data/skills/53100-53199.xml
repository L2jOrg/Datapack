<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://l2j.org" xsi:schemaLocation="http://l2j.org skills.xsd">
    <skill id="53100" name="Heroic Miracle">
        <!-- Skill of the Olympiad Hero.\n\nMax HP +850\n\nDuring attack Atk. Spd., Casting Spd. and Speed are increased. The buff of continual MP recovery is activated. -->
        <icon initial="icon.skill0912"/>
        <attributes/>
        <target/>
        <effects>
            <vital-stat-modify stat="MAX_HP" stat-add="MAX_HP">
                <power initial="850"/>
            </vital-stat-modify>
            <trigger-skill-by-damage skill="53101" target="SELF">
                <power initial="1"/>
                <chance initial="60"/>
            </trigger-skill-by-damage>
        </effects>
    </skill>
    <skill id="53101" name="Heroic Miracle" action="A2">
        <!-- Atk. Spd. +100\nCasting Spd. +100\nSpeed +20\n\nConstantly restores MP. -->
        <icon initial="icon.skill0912"/>
        <attributes magic-critical-rate="5.0" static-reuse="true" triggered="true">
            <magic-level initial="-1"/>
            <cast-range initial="-1"/>
            <reuse initial="100000"/>
        </attributes>
        <target/>
        <abnormal type="HERO_BUFF">
            <level initial="5"/>
            <time initial="10"/>
        </abnormal>
        <effects>
            <stat-modify stat="PHYSICAL_ATTACK_SPEED">
                <power initial="100"/>
            </stat-modify>
            <stat-modify stat="MAGIC_ATTACK_SPEED">
                <power initial="100"/>
            </stat-modify>
            <speed>
                <power initial="20"/>
            </speed>
            <stat-modify mode="PER" stat="REGENERATE_MP_RATE">
                <power initial="100"/>
            </stat-modify>
            <effect name="ManaHealOverTime" ticks="2">
                <power initial="150.0"/>
            </effect>
        </effects>
    </skill>
</list>
