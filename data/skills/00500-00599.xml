    <skill id="522" name="Real Target" max-level="4" action="A2">
        <!-- 
			level 1: Shock Atk. Rate +1%  For 30 sec., with a certain chance after an attack: Target's Bow Resistance -15%, Shock Resistance -10%
			level 2: Shock Atk. Rate +2%  For 30 sec., with a certain chance after an attack: Target's Bow Resistance -20%, Shock Resistance -15%
			level 3: Shock Atk. Rate +3%  For 30 sec., with a certain chance after an attack: Target's Bow Resistance -20%, Shock Resistance -20%
			level 4: Shock Atk. Rate +5%  For 30 sec., with a certain chance after an attack: Target's Bow Resistance -25%, Shock Resistance -25%
		-->
        <icon initial="icon.skill0522"/>
        <attributes auto-use="BUFF" magic-critical-rate="5.0">
            <magic-level initial="78">
                <value level="2">80</value>
                <value level="3">82</value>
                <value level="4">84</value>
            </magic-level>
            <cast-range initial="-1"/>
            <reuse initial="10000"/>
            <effect-range initial="1200"/>
            <hit-time initial="1500"/>
        </attributes>
        <consume>
            <mana initial="55">
                <value level="2">58</value>
                <value level="3">61</value>
                <value level="4">64</value>
            </mana>
        </consume>
        <target type="ENEMY"/>
        <abnormal type="REAL_TARGET" visual="REAL_TARGET">
            <level initial="1">
                <value level="2">2</value>
                <value level="3">3</value>
                <value level="4">4</value>
            </level>
            <time initial="30"/>
        </abnormal>
        <effects>
            <defence-trait>
                <trait type="SHOCK">
                    <power initial="-10">
                        <value level="2">-15</value>
                        <value level="3">-20</value>
                        <value level="4">-25</value>
                    </power>
                </trait>
                <trait type="BOW">
                    <power initial="-11">
                        <value level="2">-15</value>
                        <value level="3">-18</value>
                        <value level="4">-20</value>
                    </power>
                </trait>
            </defence-trait>
        </effects>
    </skill>
