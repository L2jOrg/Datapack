		-->
        <icon initial="icon.skill0503"/>
        <attributes magic-critical-rate="5.0" next-action="ATTACK">
            <magic-level initial="43">
                <value level="2">55</value>
                <value level="3">64</value>
            </magic-level>
            <cast-range initial="-1"/>
            <reuse initial="4000"/>
            <cool-time initial="720"/>
            <effect-point initial="-13000">
                <value level="2">-15000</value>
                <value level="3">-20000</value>
            </effect-point>
            <effect-range initial="400"/>
            <hit-time initial="1080"/>
        </attributes>
