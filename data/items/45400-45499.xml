	<item id="45488" name="Golden Treasure Chest" type="NONE">
	<!-- Double-click to get an item. -->
		<restriction stackable="true"/>
		<attributes weight="10" action="SKILL_REDUCE_ON_SKILL_SUCCESS"/>
	</item>

	<weapon id="45492" name="Fishing Rod" type="FISHING_ROD" body-part="TWO_HAND">
	<!-- A Fishing Rod for one day.  Consumes 1 Fishing Shot. -->
		<restriction freightable="false" tradable="false" dropable="false" sellable="false" private-sellable="false"/>
		<attributes weight="1000" commission-type="OTHER_ITEM" duration="1440" enchant-enabled="false"/>
		<crystal />
		<damage radius="40" angle="240"/>
		<stats>
			<stat type="ACCURACY" value="-3.75"/>
			<stat type="MAGIC_ATTACK" value="1.0"/>
			<stat type="PHYSICAL_ATTACK" value="1.0"/>
			<stat type="PHYSICAL_ATTACK_RANGE" value="80.0"/>
			<stat type="PHYSICAL_ATTACK_SPEED" value="325.0"/>
			<stat type="RANDOM_DAMAGE" value="1.0"/>
		</stats>
	</weapon>

	<item id="45493" name="Fishing Rod Chest (1-day)" type="NONE">
	<!-- Use it to obtain a 1-day Fishing Rod.  -->
		<restriction stackable="true" sellable="false"/>
		<attributes weight="100" price="20514" immediate-effect="true" action="PEEL"/>
		<extract>
			<item id="45492"/>  <!-- Fishing Rod -->
		</extract>
	</item>

	<item id="45495" name="Normal Bait" type="LURE">
	<!-- Bait for fishing. Use to catch fish.  -->
		<restriction stackable="true" sellable="false"/>
		<condition add-name="true" msg-id="1453">
			<weapon types="FISHING_ROD"/>
		</condition>
		<attributes price="7"/>
		<equip body-part="LEFT_HAND"/>
	</item>

