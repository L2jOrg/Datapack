<?xml version='1.0' encoding='utf-8'?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://l2j.org"
      xsi:schemaLocation="http://l2j.org events.xsd" >

    <event name="Siege" class="org.l2j.gameserver.engine.siege.SiegeEngine">

        <scheduler>
            <schedule name="start-preparation" event="onPreparationStart" dayOfWeek="0-6" hour="9" minute="50" repeat="true"/>
            <schedule name="start-siege" event="onSiegeStart" dayOfWeek="0-6" hour="15" minute="45" repeat="true"/>
            <schedule name="stop-siege" event="onSiegeStop" dayOfWeek="0-6" hour="23" minute="50" repeat="true"/>

            <conditionalSchedule>
                <run name="start-preparation" if="BETWEEN">
                    <schedule>start-preparation</schedule>
                    <schedule>start-siege</schedule>
                </run>
                <run name="start-siege" if="BETWEEN">
                    <schedule>start-siege</schedule>
                    <schedule>stop-siege</schedule>
                </run>
            </conditionalSchedule>
            
        </scheduler>
        
        <config>
            <siege-config>
                <castle id="3">
                    <scheduled-days>SUNDAY MONDAY TUESDAY WEDNESDAY THURSDAY FRIDAY SATURDAY</scheduled-days>
                    <castle-lord id="36792" x="117720" y="145100" z="-2642"/>
                    <control-tower id="13002" x="113115" y="144829" z="-2446"/>
                    <control-tower id="13002" x="118828" y="145106" z="-2447"/>
                    <control-tower id="13002" x="117329" y="145041" z="-2412"/>
                    <flame-tower id="13004" x="118331" y="145055" z="-2627">
                        <zones>70026 70028</zones>
                    </flame-tower>
                    <flame-tower id="13004" x="117768" y="143880" z="-2451">
                        <zones>70026 70028</zones>
                    </flame-tower>
                </castle>
            </siege-config>
        </config>

    </event>
</list>